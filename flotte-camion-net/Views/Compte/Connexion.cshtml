@model TP3_NET.Models.Compte.Compte

@{
    ViewBag.Title = "Connexion";
}

<div class="card mx-auto w-50">
    <form action="@Url.Action("Connexion")" method="post" class="card-body">
        <h3 class="card-title">Connexion</h3>

        <div class="row">
            <div class="form-group col-12">
                @Html.Label("Adresse mail *")
                @Html.TextBoxFor(compte => compte.Email, new
                {
                    type = "email",
                    @class = "form-control",
                    pattern = "[A-Za-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,3}",
                    placeholder = "john.doe@example.com",
                    required = "required",
                    maxlength = 25
                })
                @Html.ValidationMessageFor(compte => compte.Email, null, new
                {
                    @class = "form-text text-danger font-weight-bold"
                }, "small")
            </div>
            <div class="form-group col-12">
                @Html.Label("Mot de passe *")
                @Html.PasswordFor(compte => compte.MotDePasse, new
                {
                    @class = "form-control",
                    placeholder = "•••••••••",
                    required = "required",
                    minlength = 6
                })
                @Html.ValidationMessageFor(compte => compte.MotDePasse, null, new
                {
                    @class = "form-text text-danger font-weight-bold"
                }, "small")
            </div>
        </div>
        @Html.ValidationMessage("ActionMessage", null, new
        {
            @class = "form-text text-danger font-weight-bold mb-1"
        }, "small")
        <button class="btn btn-primary" type="submit">Se connecter</button>
    </form>
</div>