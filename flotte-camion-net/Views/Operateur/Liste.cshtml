@model IEnumerable<TP3_NET.Models.Employe.Operateur>

@{
    ViewBag.Title = "Liste des opérateurs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Liste des opérateurs</h2>

<p>
    @Html.ActionLink("Créer un nouvel opérateur", "Creer")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prenom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Compte.Email)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prenom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Compte.Email)
        </td>
        <td>
            @Html.ActionLink("Modifier", "Modifier", new { id=item.IdEmploye }) |
            @Html.ActionLink("Consulter", "Consulter", new { id=item.IdEmploye }) |
            @Html.ActionLink("Supprimer", "Supprimer", new { id=item.IdEmploye })
        </td>
    </tr>
}

</table>
