@model TP3_NET.Models.Employe.Operateur

@{
    ViewBag.Title = "Créer un opérateur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Créer un opérateur</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Operateurs</h4>
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(model => model.Nom, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nom, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Nom, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Prenom, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Prenom, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Prenom, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.Label("Adresse mail *")
                @Html.TextBoxFor(operateur => operateur.Compte.Email, new
                {
                    type = "email",
                    @class = "form-control",
                    pattern = "[A-Za-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,3}",
                    placeholder = "john.doe@example.com",
                    required = "required",
                    maxlength = 25
                })
                @Html.ValidationMessageFor(operateur => operateur.Compte.Email, null, new
                {
                    @class = "form-text text-danger font-weight-bold"
                }, "small")
            </div>
        </div>

        <div class="form-group col-md-10">
            @Html.Label("Mot de passe *")
            @Html.PasswordFor(operateur => operateur.Compte.MotDePasse, new
            {
                @class = "form-control",
                placeholder = "•••••••••",
                required = "required",
                minlength = 6,
                maxlength = 50
            })
            @Html.ValidationMessageFor(operateur => operateur.Compte.MotDePasse, null, new
            {
                @class = "form-text text-danger font-weight-bold"
            }, "small")
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Créer l'opérateur" class="btn btn-primary"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retour à la liste des opérateurs", "Liste")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}